<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:id="@+id/layoutGridItem"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/day_background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/lottemarth_light"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="3dp"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:gravity="right"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/schedule1"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="3dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:gravity="left"
        android:background="@drawable/schedule_background1"
        android:textColor="#434343"/>
    <TextView
        android:id="@+id/schedule2"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:gravity="left"
        android:background="@drawable/schedule_background2"
        android:textColor="#434343"/>
    <TextView
        android:id="@+id/schedule3"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:gravity="left"
        android:background="@drawable/schedule_background3"
        android:textColor="#434343"/>
    <TextView
        android:id="@+id/schedule4"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:gravity="left"
        android:background="@drawable/schedule_background4"
        android:textColor="#434343"/>


</LinearLayout>